<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.euapp16.myapplication.ActivitySubject">

    <Button
        android:text="IT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_IT"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_IT"
        android:layout_toRightOf="@+id/button_IT"
        android:layout_toEndOf="@+id/button_IT"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:id="@+id/button_Math" />

    <Button
        android:text="Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/button_Language"
        android:layout_below="@+id/button_IT"
        android:layout_alignLeft="@+id/button_IT"
        android:layout_alignStart="@+id/button_IT" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_Math"
        android:layout_toEndOf="@+id/button_Math"
        android:id="@+id/button_Back" />

</RelativeLayout>
